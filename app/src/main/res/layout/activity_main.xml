<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Nome do App -->
        <TextView
            android:id="@+id/text_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WeatherApp"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Campo de pesquisa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:padding="8dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/edit_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite a cidade"
                android:textColorHint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#2196F3" />
        </LinearLayout>

        <!-- RESULTADOS DO CLIMA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <!-- Cidade -->
            <TextView
                android:id="@+id/text_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recife, PE"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Temperatura -->
            <TextView
                android:id="@+id/text_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28Â°C"
                android:textColor="#FFFFFF"
                android:textSize="52sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="32sp"
                android:autoSizeMaxTextSize="56sp" />

            <!-- CondiÃ§Ã£o -->
            <TextView
                android:id="@+id/text_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcialmente nublado"
                android:textColor="#B0BEC5"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Ãcone -->
            <ImageView
                android:id="@+id/image_weather_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_sunny"
                android:contentDescription="Ãcone do clima"
                android:layout_marginBottom="24dp" />
        </LinearLayout>

        <!-- Linha divisÃ³ria -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="24dp" />

        <!-- TÃ­tulo da previsÃ£o -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PrevisÃ£o da Semana"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Lista da previsÃ£o -->
        <LinearLayout
            android:id="@+id/layout_week_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <!-- Dia 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Segunda"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ðŸŒ¤ 30Â°C / 22Â°C"
                    android:textColor="#B0BEC5"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Dia 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TerÃ§a"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ðŸŒ§ 27Â°C / 21Â°C"
                    android:textColor="#B0BEC5"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Dia 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quarta"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="â›… 29Â°C / 23Â°C"
                    android:textColor="#B0BEC5"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
